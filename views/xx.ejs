<%- include("header") -%>

<body>
  <div class="box" id="heading">
    <h1><%= kindofday %></h1>
  </div>

  <div class="box">
    <% newitems.forEach(function(f){ %>
    <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=f._id %>" onchange="this.form.submit()"/>
      <p><%= f.name%></p>
    </div>
    </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input
        type="text"
        name="itemm"
        placeholder="New Item"
        autocomplete="off"
      />
      <button type="submit">+</button>
    </form>
  </div>

  <%- include("footer") -%>
</body>
